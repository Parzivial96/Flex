<div class="cartCard">
    <img class="cartImage" src="data:image/png;base64,{{@orderDetails.dp}}">
    <div class="cartDetails">
        <p id="productName">{{@orderDetails.name}}</p>
        <p>Color : {{@orderDetails.color}} | Size : {{@orderDetails.size}}</p>
        <p>Discount : {{@orderDetails.productDiscount}}%</p>
        <p>MRP : {{@orderDetails.productPrice}}</p>
        <button id="productPrice" type="button" {{on "click" this.addToOrder}}>BUY NOW <span
                id="price">â‚¹{{@orderDetails.discountedPrice}}</span></button>
    </div>
    <div class="removeFromCart" {{on "click" this.removeFromCart}}>
        <img src="../assets/bin.png">
    </div>
</div>